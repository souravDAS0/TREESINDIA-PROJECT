# Application Configuration
ENV=development
PORT=8080

# OTP Configuration
OTP=0000

# Database Configuration (Supabase or local PostgreSQL)
DATABASE_URL=postgresql://username:password@host:5432/treesindia

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production

# Cloudinary Configuration
CLOUDINARY_URL=cloudinary://your-cloud-name:your-api-key@your-cloud-name

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,Accept,Origin,Cache-Control,X-File-Name

# Email Configuration (Hostinger SMTP)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_USERNAME=noreply@treesindiaservices.com
SMTP_PASSWORD=your_hostinger_email_password
SMTP_FROM_EMAIL=noreply@treesindiaservices.com


